<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.funOfSchool.ui.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/index_me"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:src="@mipmap/me"
            android:layout_weight="1"/>

        <AutoCompleteTextView
            android:id="@+id/map_et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入目标学校"
            android:background="@drawable/search_bg"
            style="@style/SecondText"
            android:textColorHint="@color/colorPrimary"
            android:textColor="@color/colorPrimary"
            android:drawableLeft="@mipmap/search_icon"
            android:drawablePadding="10dp"
            android:layout_weight="8"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <ImageView
            android:id="@+id/index_msg"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:src="@mipmap/msg"
            android:layout_weight="1"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">
        <com.baidu.mapapi.map.TextureMapView
            android:id="@+id/bmapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <ImageView
            android:id="@+id/map_cannot_invite"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/invite_index"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/map_can_invite"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/invite"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:visibility="invisible"/>

    </FrameLayout>
</LinearLayout>
