<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical"

    tools:context=".ui.RegistActivity"
    android:id="@+id/line1">
    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#88FFFFFF">
        <ImageButton
            android:id="@+id/IB"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:background="@mipmap/back_white" />
    </LinearLayout>

    <ImageView

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/logo"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"/>
    <EditText
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/Et_regist_phone"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/login_et_bg"
        android:hint="请输入手机号"
        android:textColor="#FFFFFF"
        style="@style/FirstText"
        android:textColorHint="#FFFFFF"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">
        <EditText
            android:id="@+id/code"
            android:paddingLeft="15dp"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/login_et_bg"
            android:hint="请输入验证码"
            android:textColor="#FFFFFF"
            style="@style/FirstText"
            android:textColorHint="#FFFFFF"
            android:layout_alignParentLeft="true"
            />
        <Button
            android:id="@+id/Getnum"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/login_bg"
            android:text="获取验证码"
            android:textColor="#5677FC"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <EditText
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/Et_regist_password"
        android:paddingLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/login_et_bg"
        android:hint="请输入6-20位数字与英文组合密码"
        android:maxLength="20"
        android:textColor="#FFFFFF"
        style="@style/FirstText"
        android:textColorHint="#FFFFFF"
        android:layout_gravity="center"/>
    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/IVregist"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/signal"
            android:visibility="gone"/>
        <TextView
            android:layout_marginLeft="25dp"
            android:id="@+id/Tv_regist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <Button
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/Btn_regist"
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/login_bg"
        android:text="注册"
        android:textColor="#5677FC"
        android:layout_gravity="center"/>
    <TextView
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="注册即代表阅读并同意《校脸用户协议》"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"/>
</LinearLayout>


