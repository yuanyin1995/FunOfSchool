<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.funOfSchool.ui.ReceiveInviteActivity">
    <RelativeLayout
        android:id="@+id/receive_date"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/titleBg"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp">
        <ImageView
            android:id="@+id/receive_date_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/date"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/receive_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出游时间"
            style="@style/FirstText"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/receive_date_icon"/>
        <TextView
            android:id="@+id/receive_date_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondText"
            android:layout_toLeftOf="@+id/select_age_open_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/receive_remark_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="其他要求："
        style="@style/FirstText"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="1dp"/>
    <TextView
        android:id="@+id/receive_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SecondText"
        android:paddingTop="12dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <Button
            android:id="@+id/receive_btn_accept"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="接受"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:background="@drawable/btn_bg"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/receive_btn_refuse"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="拒绝"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:background="@drawable/btn_bg"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/receive_btn_tochat"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:text="聊聊看 "
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:background="@drawable/btn_bg"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
    </LinearLayout>
</LinearLayout>
