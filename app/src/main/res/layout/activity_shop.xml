<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.funOfSchool.ui.ShopActivity"
    android:background="@color/white">
    <ImageView
        android:id="@+id/item_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/thing"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水杯"
            style="@style/FirstText"
            android:layout_below="@+id/item_pic"
            android:layout_alignLeft="@+id/item_pic"/>


    <RelativeLayout
        android:id="@+id/item_jifen_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_alignLeft="@id/item_name"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/jifen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换积分:"
            style="@style/SecondText"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/item_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3000"
            android:textColor="#FFC125"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/jifen_title"
            android:layout_marginLeft="2dp"
            android:layout_centerVertical="true" />


    </RelativeLayout>
    <Button
        android:id="@+id/shop_btn"
        android:layout_width="55dp"
        android:layout_height="20dp"
        android:text="兑换"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textColorHint="#ffffff"
        android:background="@drawable/level_bg"
        android:layout_marginTop="8dp"
        android:layout_below="@id/item_jifen_rl"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
