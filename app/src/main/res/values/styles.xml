<resources>

    <!-- Base application theme. -->
    <style name="foodRatingBar"
        parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/evaluate_ratingstars</item>
        <item name="android:minHeight">44dip</item>
        <item name="android:maxHeight">44dip</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/firstText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FirstText">
        <item name="android:textColor">@color/firstText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SecondText">
        <item name="android:textColor">@color/secondText</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChatTabText">
        <item name="android:textColor">@color/chatTabText</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- 选择照片底部弹出层 -->
    <style name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
</resources>
