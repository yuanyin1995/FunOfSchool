<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.funOfSchool.ui.MainActivity"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.funOfSchool.ui.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/index_me"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:src="@mipmap/me"
                android:layout_weight="1"/>

            <AutoCompleteTextView
                android:id="@+id/map_et_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="请输入目标学校"
                android:background="@drawable/search_bg"
                style="@style/SecondText"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary"
                android:drawableLeft="@mipmap/search_icon"
                android:drawablePadding="10dp"
                android:layout_weight="8"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>

            <ImageView
                android:id="@+id/index_msg"
                android:layout_width="0dp"
                android:layout_height="26dp"
                android:src="@mipmap/msg"
                android:layout_weight="1"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">
            <com.baidu.mapapi.map.TextureMapView
                android:id="@+id/bmapView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true" />

            <ImageView
                android:id="@+id/map_cannot_invite"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/invite_index"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:visibility="visible"/>
            <ImageView
                android:id="@+id/map_can_invite"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/invite"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/map_match"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/match"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/start_travel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/start_travel"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/end_travel"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/end_travel"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:visibility="invisible"/>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg"
                android:orientation="vertical"
                android:gravity="center">
                <com.funOfSchool.util.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/yuan"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.5"
                        android:textSize="18sp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="65dp"
                    android:layout_height="23dp"
                    android:text="积分|20"
                    android:paddingLeft="6dp"
                    android:paddingBottom="2dp"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/level_bg"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/me_personinfo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="20dp"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/myinfo"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="个人资料"
                    style="@style/FirstText"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <View  android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#EEEEEE"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:id="@+id/me_trvallist"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="20dp"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/travellist"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="出游记录"
                    style="@style/FirstText"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <View  android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#EEEEEE"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:id="@+id/me_myprize"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="20dp"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/myprize"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="卡券包"
                    style="@style/FirstText"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <View  android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#EEEEEE"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:id="@+id/me_market"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="20dp"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/market"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="积分商城"
                    style="@style/FirstText"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
            <View  android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#EEEEEE"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>
            <LinearLayout
                android:id="@+id/me_set"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="20dp"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/set"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="设置"
                    style="@style/FirstText"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
